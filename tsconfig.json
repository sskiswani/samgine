{
	"compilerOptions": {
		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./src",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmitOnError": true,
		"noImplicitAny": false,
		"outDir": "./bin/ts",
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"target": "es6"
	},
	"include": [
		"./node_modules/@types/*.ts",
		"./src/*.ts"
	],
	"exclude": [
		"bin",
		"node_modules"
	]
}